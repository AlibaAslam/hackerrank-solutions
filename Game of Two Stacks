#include <stdio.h>
#include <stdlib.h>

int max(int a, int b) {
    return (a > b) ? a : b;
}

int twoStacks(int maxSum, int n, int* a, int m, int* b) {
    long long current_sum = 0;
    int max_count = 0;
    int i = 0;

    while (i < n && current_sum + a[i] <= maxSum) {
        current_sum += a[i];
        i++;
    }
    max_count = i;

    int j = 0;
    while (i >= 0) {
        while (j < m && current_sum + b[j] <= maxSum) {
            current_sum += b[j];
            j++;
        }

        max_count = max(max_count, i + j);
        
        i--;
        if (i >= 0) {
            current_sum -= a[i];
        }
    }

    return max_count;
}

int main() {
    int g;
    if (scanf("%d", &g) != 1) return 1;

    for (int game = 0; game < g; game++) {
        int n, m, maxSum;
        if (scanf("%d %d %d", &n, &m, &maxSum) != 3) return 1;

        int* a = (int*)malloc(n * sizeof(int));
        if (!a) return 1;
        int* b = (int*)malloc(m * sizeof(int));
        if (!b) {
            free(a);
            return 1;
        }

        for (int i = 0; i < n; i++) {
            if (scanf("%d", &a[i]) != 1) {
                free(a);
                free(b);
                return 1;
            }
        }

        for (int i = 0; i < m; i++) {
            if (scanf("%d", &b[i]) != 1) {
                free(a);
                free(b);
                return 1;
            }
        }

        int result = twoStacks(maxSum, n, a, m, b);
        printf("%d\n", result);

        free(a);
        free(b);
    }

    return 0;
}
